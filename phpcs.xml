<?xml version="1.0"?>
<ruleset name="CHIP for WooCommerce">
	<description>PHPCS ruleset for CHIP for WooCommerce plugin.</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/assets/js/frontend/*.js</exclude-pattern>
	<exclude-pattern>/assets/js/frontend/*.asset.php</exclude-pattern>

	<!-- Use WordPress coding standards -->
	<rule ref="WordPress">
	</rule>

	<!-- Allow file names that don't match class names for main plugin file -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>chip-for-woocommerce.php</exclude-pattern>
	</rule>

	<!-- Set minimum supported PHP version -->
	<config name="minimum_supported_wp_version" value="6.3"/>
	<config name="testVersion" value="7.4-"/>

	<!-- Text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="chip-for-woocommerce"/>
			</property>
		</properties>
	</rule>
</ruleset>

